{
  "name": "@pcd/passport-ui",
  "version": "0.15.0",
  "license": "GPL-3.0-or-later",
  "main": "./dist/cjs/src/index.js",
  "module": "./dist/esm/src/index.js",
  "types": "./dist/types/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/src/index.d.ts",
      "import": "./dist/esm/src/index.js",
      "require": "./dist/cjs/src/index.js"
    }
  },
  "files": [
    "dist",
    "./README.md",
    "./LICENSE"
  ],
  "scripts": {
    "lint": "eslint \"**/*.ts{,x}\"",
    "build": "tsc -b tsconfig.cjs.json tsconfig.esm.json",
    "watch": "tsc --watch -p tsconfig.cjs.json & tsc --watch -p tsconfig.esm.json",
    "postbuild": "fix-esm-import-path ./dist/esm/src",
    "typecheck": "yarn tsc --noEmit",
    "prepublishOnly": "yarn clean && yarn build",
    "test": "ts-mocha --type-check --config ../../../.mocharc.js --exit 'test/**/*.spec.ts'",
    "clean": "rm -rf dist node_modules *.tsbuildinfo"
  },
  "dependencies": {
    "@pcd/message-pcd": "0.5.0",
    "buffer": "^6.0.3",
    "medium-zoom": "^1.0.8",
    "pako": "^2.1.0",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-router-dom": "^6.9.0",
    "styled-components": "^5.3.9"
  },
  "devDependencies": {
    "@pcd/eslint-config-custom": "0.15.0",
    "@pcd/tsconfig": "0.15.0",
    "@types/mocha": "^10.0.1",
    "@types/pako": "^2.0.0",
    "@types/qr-image": "^3.2.7",
    "@types/react": "^18.0.22",
    "@types/styled-components": "^5.1.26",
    "eslint": "8.57.0",
    "mocha": "^10.2.0",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
